generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Kiosk {
  id            String  @id @default(uuid()) @map("_id") @db.ObjectId
  serialKey     String
  description   String
  isKioskClosed Boolean @default(true)
  storeOpensAt  String
  storeClosedAt String
}
